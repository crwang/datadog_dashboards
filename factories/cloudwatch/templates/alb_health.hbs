{
  "type": "timeseries",
  "title": true,
  "title_text": "Hosts",
  "width": {{width}},
  "height": {{height}},
  "x": {{x}},
  "y": {{y}},
  "tile_def": {
    "viz": "timeseries",
    "requests": [
      {
        "q": "sum:aws.elb.healthy_host_count{targetgroup:targetgroup/{{~toLowerCase targetgroup~}}}",
        "type": "area",
        "style": {
          "width": "normal",
          "palette": "dog_classic",
          "type": "solid"
        },
        "metadata": {
          "sum:aws.elb.healthy_host_count{targetgroup:targetgroup/{{~toLowerCase targetgroup~}}}": {
            "alias": "Healthy"
          }
        }
      },
      {
        "q": "sum:aws.elb.un_healthy_host_count{targetgroup:targetgroup/{{~toLowerCase targetgroup~}}}",
        "type": "area",
        "style": {
          "width": "normal",
          "palette": "warm",
          "type": "solid"
        },
        "metadata": {
          "sum:aws.elb.un_healthy_host_count{targetgroup:targetgroup/{{~toLowerCase targetgroup~}}}": {
            "alias": "Unhealthy"
          }
        }
      }
    ],
    "autoscale": true
  },
  "legend": false
}
